@model StatesQuiz.Models.ViewModel.PreviousResultsViewModel
@{ 
    ViewData["Title"] = "Previous Results";
}
<div class="row project-cards">
    <div class="col-md-12 project-list">
        <div class="card">
            <div class="row">
                <div class="col-md-6 p-0">
                    <ul class="nav nav-tabs border-tab" id="top-tab" role="tablist">
                        <li class="nav-item"><a class="nav-link active" id="top-home-tab" data-bs-toggle="tab" href="#top-home" role="tab" aria-controls="top-home" aria-selected="true"><i data-feather="target"></i>All</a></li>
                        @*<li class="nav-item"><a class="nav-link" id="profile-top-tab" data-bs-toggle="tab" href="#top-profile" role="tab" aria-controls="top-profile" aria-selected="false"><i data-feather="info"></i>Doing</a></li>
                            <li class="nav-item"><a class="nav-link" id="contact-top-tab" data-bs-toggle="tab" href="#top-contact" role="tab" aria-controls="top-contact" aria-selected="false"><i data-feather="check-circle"></i>Done</a></li>*@
                    </ul>
                </div>
                <div class="col-md-6 p-0">
                    <div class="form-group mb-0 me-0"></div><a class="btn btn-primary" asp-action="PreQuiz" asp-controller="Home"> <i data-feather="plus-square"> </i>Take New Quiz</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="tab-content" id="top-tabContent">
                    <div class="tab-pane fade show active" id="top-home" role="tabpanel" aria-labelledby="top-home-tab">
                        <div class="row">
                            @foreach (TestResult result in Model.PreviousResults)
                            {
                                
                                <div class="col-xxl-4 col-lg-6">
                                    <div class="project-box">

                                        @if ((result.NumberCorrect * 10) < 70)
                                        {
                                            <span class="badge badge-danger">@(result.NumberCorrect * 10)</span>
                                        }
                                        else if ((result.NumberCorrect * 10) < 85)
                                        {
                                            <span class="badge badge-warning">@(result.NumberCorrect * 10)</span>
                                        }
                                        else
                                        {
                                    <span class="badge badge-success">@(result.NumberCorrect * 10)</span>
                                        }
                                        <h6>Test Results</h6>
                                        <p>@result.TestDateTime.ToString("ddd, MMM dd")</p>
                                        <div class="media">


                                        </div>
                                        <p>Breakdown of your responses:</p>
                                        <div class="row details">
                                            <div class="col-6"><span>Correct </span></div>
                                            <div class="col-6 font-primary">@result.NumberCorrect </div>
                                            <div class="col-6"> <span>InCorrect</span></div>
                                            <div class="col-6 font-primary">@(result.TotalQuestions - result.NumberCorrect)</div>
                                            <div class="col-6"> <span></span>Total Questions</div>
                                            <div class="col-6 font-primary">@result.TotalQuestions</div>
                                        </div>

                                        <div class="project-status mt-4">
                                            <div class="media mb-0">
                                                <p>@(result.NumberCorrect * 10)% </p>
                                                <div class="media-body text-end"><span>Done</span></div>
                                            </div>
                                            <div class="progress" style="height: 5px">
                                                <div class="progress-bar-animated bg-primary progress-bar-striped" role="progressbar" style="width: @(result.NumberCorrect * 10)%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
